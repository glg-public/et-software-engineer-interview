{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./src",
    "alwaysStrict": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    //! disabled due to type-graphql
    "strictPropertyInitialization": false
  },
  "tsc-alias": {
    "verbose": true,
    "resolveFullPaths": true
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*.ts", "src/**/*.test.ts", "**/__mocks__/*"]
}
